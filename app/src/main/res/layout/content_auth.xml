<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_phone_number"
            android:textColor="@color/black"
            android:id="@+id/enter_mobno_text"
            android:textSize="20sp"
            android:layout_gravity="left"
            />


        <TextView
            android:text="@string/enter_otp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_otp"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:gravity="left"
            android:visibility="gone"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textColorLink="@color/c2"
            android:gravity="left"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textAllCaps="false"
            android:id="@+id/et_otp"
            android:visibility="gone"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:hint="@string/enter_your_num"
            android:textColorLink="@color/c2"
            android:layout_marginBottom="10dp"
            android:layout_gravity="left"
            android:ems="10"
            android:textAllCaps="false"
            android:id="@+id/et_mob" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="@string/dgts__send_confirmation_code"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:id="@+id/enter_mob"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/edged_button_background"

            android:textColor="@color/white"/>
        <TextView
            android:text="@string/login_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewmb"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:layout_marginTop="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Continue"
                android:textAllCaps="false"
                android:id="@+id/enter_otp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/button_border"
                android:textColor="@color/c5"
                android:visibility="gone"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Resend Otp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:id="@+id/resen_otp"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/button_border"
                android:textColor="@color/c5"
                android:visibility="gone"/>


        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
