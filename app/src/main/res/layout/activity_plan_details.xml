<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_plan_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobi.app.saralseva.activities.PlanDetailsActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar4" >
        <include layout="@layout/nav_toolbar"/>
        </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/planDetailRecyclerView"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/bannerBackground">

</android.support.v7.widget.RecyclerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_nosubs"
        android:id="@+id/imageViewNodata"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_plans_available"
        android:id="@+id/noPlans"
        android:gravity="center_vertical|center_horizontal|center"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/imageViewNodata" />
</RelativeLayout>
