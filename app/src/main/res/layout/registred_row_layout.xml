<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:weightSum="1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/regCompCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5">

                    <TextView
                        android:text="@string/ticket_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/labelTicket"
                        android:layout_marginRight="5dp"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="#t546456"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewTicket"
                        android:textSize="10sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5">

                    <TextView
                        android:text="@string/complaint_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/labelStatus"
                        android:layout_marginRight="5dp"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pending"
                        android:layout_height="match_parent"
                        android:id="@+id/textViewStatus"
                        android:textSize="10sp"
                        android:textColor="@color/payu_blue" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.05dp"
                android:background="@color/bannerBackground"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_margin="10dp">

                <TextView
                    android:text="@string/complaint_issue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/labelIssue"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:textAllCaps="false" />

                <TextView
                    android:layout_width="0dp"
                    android:text="Slow connection on the average it doesnt seems like to be in the way its id and very slow"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewIssue"
                    android:layout_weight="0.7"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRating"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:gravity="center_horizontal">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar"
                    android:numStars="5"
                    android:rating="1"
                    android:elevation="0dp"
                    android:clickable="false"
                    android:isIndicator="false"
                    android:maxHeight="52dip"
                    android:minHeight="39dp"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator" />

                <Button
                    android:text="@string/complaint_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonRate"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_gravity="right|center"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
